${mpd_smart} | \
${alignr} | ${acpitemp}C | \
${if_match ${battery_percent} > 75}${color1}${else}${if_match ${battery_percent} > 50}${color2}${else}${if_match ${battery_percent} > 25}${color3}${else}${color4}${endif}${endif}${endif} ${battery_percent}% ${color}| \
${uptime_short} | ${time  %H:%M %d-%m} 
